<div class="col-lg-6 mx-lg-auto my-4">
  <div class="card shadow">
    <div class="card-header">
      <h3 class="card-title text-center">Forgot your password?</h3>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url:
      password_path(resource_name), html: { method: :post }) do |f| %> <%=
      render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email,class:"my-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control form-control-md"%>
      </div>

      <div class="actions my-2">
        <%= f.submit "Send me reset password instructions",class: "btn btn-primary" %>
      </div>
      <% end %> <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
