<div
    class="p-5 d-flex flex-column align-items-center justify-content-center  " style="background-image:url('assets/course_images/bg.jpg');background-repeat: no-repeat; background-size: cover;height:70vh;" >
    <h1>Learn programming skills with us</h1>
    <button class="btn btn-primary">view more</button>
  </div>
<div class="container-fluid" >
  
  <div
    class="container d-flex flex-wrap p-3 justify-content-center align-items-center">
    <% @courses.each do |course|%>
    <div class="card m-3 shadow" style="width: 18rem">
      <img src="<%=course.image%>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%=course.name%></h5>
        <div class="card-text d-flex justify-content-between">
          <p><%=course.description%></p>
          <p>Price:<%=course.price%></p>
        </div>
        <%= link_to "View Details" ,course,methods: :get, class: "btn
        btn-primary" %>
      </div>
    </div>
    <%end%>
  </div>
 <h3 class="text-center">Feedback</h3>

</div>
<div class="feedback-section   d-flex flex-wrap mt-3" style="background-color: rgb(176, 218, 255);">
   
  <% @feedbacks.each do |feedback| %>
  <div class="card shadow p-4 m-3" style="width: 23rem">
    <div class="card-title">
      <div class="d-flex">
        <% if feedback.user.avatar.persisted? %> 
           <%= image_tag feedback.user.avatar, class:"img-fluid" ,width:"40px",style:"border-radius:50%"%> 
        <%else%> 
           <%= image_tag "/assets/course_images/img.png", class:"img-fluid",width:"40px",style:"border-radius:50%"%> 
        <%end %>
        <h5 class="card-title text-capitalize my-auto mx-2"><%= feedback.user.name%></h5>
      </div>
      
    </div>
    <div class="card-body">
      <p class="card-text"><%= feedback.description%></p>
    </div>
  </div>
  <%end%>
 </div>
